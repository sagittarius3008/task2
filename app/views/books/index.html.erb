<%= flash[:notice] %>
<%= flash[:alert] %>
<header>
	<h1>Books</h1>
</header>
<body>
	<table>
		<tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
    </tr>
    <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to "show", book_path(book) %></td>
      <td><%= link_to "edit", edit_book_path(book) %></td>
      <td><%= link_to "destroy", book_path(book), method: :delete %></td>
    </tr>
    <% end%>
    
	</table>
	
</body>
<% if @book.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@book.errors.count, "error") %> 以下のエラーを修正してください。:</h2>

    <ul>
    <% @book.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<h2>New Book</h2>

<%= form_with model:@book, local:true do |f| %>
	
	<div>Title</div>
	<%= f.text_field :title %>
	
	<div>Body</div>
	<%= f.text_field :body %>
	<div>
	<%= f.submit 'Create Book' %>
  </div>
<% end %>